# Mind MCP Configuration
# Copy to .env and fill in values

# =============================================================================
# Database Backend (default: falkordb, graph defaults to repo name)
# =============================================================================
# DATABASE_BACKEND=falkordb
# FALKORDB_HOST=localhost
# FALKORDB_PORT=6379
# FALKORDB_GRAPH=my_graph  # Optional, defaults to repo name

# DATABASE_BACKEND=neo4j
# NEO4J_URI=neo4j+s://xxx.databases.neo4j.io
# NEO4J_USER=neo4j
# NEO4J_PASSWORD=your_password
# NEO4J_DATABASE=neo4j

# =============================================================================
# LLM Providers
# =============================================================================
# GEMINI_API_KEY=your_key
# GEMINI_MODEL=gemini-3-flash-preview

# =============================================================================
# MCP Server
# =============================================================================
# MCP_API_KEY=your_key

# =============================================================================
# Optional: Ngrok tunneling
# =============================================================================
# NGROK_URL=https://your-tunnel.ngrok-free.app
# NGROK_PORT=3005
# NGROK_AUTH_TOKEN=your_token
